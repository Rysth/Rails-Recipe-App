<div>
  <h1 class="py-10 sm:py-16  md:py-24 text-2xl font-bold text-center sm:mb-10 sm:text-4xl md:text-5xl bg-[var(--CL-orange)] text-white">Welcome! <%= current_user.name %></h1>
  <div class="container max-w-screen-lg p-4 mx-auto">
    <header class="flex justify-end">
      <%= link_to 'Add Recipe', new_recipe_path, method: :get, class: 'text-white btn-success bg-green-600 rounded-full btn btn-sm sm:mb-3 inline-block grid place-items-center' %>
    </header>
    <ul class="grid gap-5 p-0 list-none">
    <% @recipes.each do |recipe| %>
      <li class="grid items-center gap-5 p-4 py-6 border cursor-pointer recipe-item sm:grid-cols-2 rounded-xl md:transition md:hover:shadow-2xl md:hover:-translate-y-1">
        <header class="flex items-center justify-between gap-5 recipe-info sm:flex-col sm:items-start sm:gap-0">
          <a href="/recipes/<%= recipe.id %>">
              <h2 class="text-xl font-semibold sm:text-3xl md:text-4xl text-ellipsis max-w-[30rem] truncate">
                <%= recipe.name %>
              </h2>
          </a>
          <%= button_to 'Remove', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-white btn-error bg-red-600 rounded-full btn btn-sm sm:mt-3 inline-block relative z-[500]' %>
        </header>
        <p class="text-sm text-justify sm:text-left"><%= recipe.description %></p>
      </li>
    <% end %>
  </ul>

  <% if @recipes.empty? %>
    <p class="text-sm italic text-center">There are no recipes.</p>
  <% end %>
  </div>
</div>