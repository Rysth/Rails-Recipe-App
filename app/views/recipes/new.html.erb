<h1 class="py-10 sm:py-16  md:py-24 text-2xl font-bold text-center sm:mb-10 sm:text-4xl md:text-5xl bg-[var(--CL-orange)] text-white">New Recipe</h1>
<div class="container max-w-screen-lg p-4 mx-auto">
  <h2 class="text-2xl font-bold md:text-4xl lg:text-5xl">Add New Recipe</h2>

  <%= form_with url: recipes_path, model: @recipe, method: :post, class: 'grid gap-5 mt-5 sm:mt-8' do |form| %>
    <%= form.text_field :name, placeholder:"Recipe Name"%>
    <%= form.number_field :preparation_time, placeholder: "Preparation Time (min)"%>
    <%= form.number_field :cooking_time, placeholder: "Cooking Time (min)"%>
    <%= form.text_area :description, placeholder:"Description", class:'h-32 resize-none'%>
    <fieldset>
      <%= form.label :public, "Public Recipe" %>
      <%= form.check_box :public %>
    </fieldset>
    <fieldset>
      <%= form.submit "Add new Recipe", class:'float-right text-white bg-green-600 rounded-full btn btn-success border-none'%>
    </fieldset>
  <% end %>
</div>
